{* Latte template *}

{block content}

<body>

    
	<!-- TOP BAR -->
	<div id="top-bar">
		
		<div class="page-full-width cf">

			<ul id="nav" class="fl">
	
				<li class="v-sep"><a n:href="Homepage: firma => $firma" class="round button dark ic-left-arrow image-left">Späť</a></li>
				<li class="v-sep"><a n:href="Choice:" class="round button dark menu-user image-left">Prihlásený ako <strong>{$user->getIdentity()->meno} {$user->getIdentity()->priezvisko}</strong></a>
					<ul>
						<li><a n:href="Password:">Zmeniť heslo</a></li>
						<li><a n:href="signOut!">Odhlásiť</a></li>
					</ul> 
				</li>
				
				
				<li><a n:href="signOut!" class="round button dark menu-logoff image-left">Odhlásiť sa</a></li>
				
			</ul> <!-- end nav -->

					
			

		</div> <!-- end full-width -->	
	
	</div> <!-- end top-bar -->
	
	
	
	

	
	
	<!-- MAIN CONTENT -->
	<div id="content">
		
		<div class="page-full-width cf">

			
			
			<!--<div class="side-content fr">
			
				<div class="content-module"> -->
                    
                  
				
					<div class="content-module-heading cf">
					
						<h3 class="fl" n:block="title">Pridanie výpožičky - {$infoFirma->nazov}</h3>
						
						
					<!--	<span class="fr expand-collapse-text initial-expand">Click to expand</span>-->
					</div> <!-- end content-module-heading -->
					<br>
					<p>Vytvárate výpožičku k úložnej jednotke <b>č.{$infoJednotka->cislo_jednotky}</b> s rokom vzniku <b>{$infoJednotka->rok_vzniku}</b></p>
					
					
					<div class="content-module-main">
					    
					    
					   
					    <!-- FORMULAR -->
					    {form pridatVypozickaForm}

								       <fieldset>
									    {control $form errors}
									   <p>
									    {label typ/}
									    {input typ}
									   </p>
									   <p>
									    {label ziadatel/}
									    {input ziadatel}
									   </p>
									   <p>
									   {label poznamka/}
									   {input poznamka}
									   </p>
									   <p>
									    {label mnozstvo/}
									    {input mnozstvo}
									    <em>Pokúste sa prosím, zadať číselne.</em>
									   </p>
									   <p>
									    {label cislo_zaznamu/}
									    {input cislo_zaznamu}
									   </p>
									   
									    {input pridat}
									   
									</fieldset>
	
					{/form}
						
					    
					</div> <!-- end content-module-main -->
				
				</div> <!-- end content-module -->
				
                                
				
		
			</div> <!-- end side-content -->
		
                                                            
                                                            
                
		</div> <!-- end full-width -->
			
	</div> <!-- end content -->
	

	
	<!-- FOOTER -->
	<div id="footer">
	
	    <p>Vytvorené ako bakalárska práca.<strong><a href="mailto:michal.bobocky@me.com"> Michal Bobocký </a>, <a href="https://mendelu.cz">MENDELU.</a></strong></p>
		<p>2013</p>
	</div> <!-- end footer --><!-- end footer -->

</body>
</html>